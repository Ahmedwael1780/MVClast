@model Department

<div class="d-flex justify-content-center">
    <h1 class="text-success">Department Details</h1>
</div>

<br />
<hr />
<br />

<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayNameFor(e => e.DeptName):  @Model.DeptName</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(e => e.DeptId):  @Model.DeptId</h6>
            <div class="d-flex justify-content-center">
                <a asp-controller="Department" asp-action="Index" class="btn btn-secondary mt-4">Back</a>
            </div>
        </div>
    </div>
</div>